<h1>Listing agents</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Image</th>
      <th>Country</th>
      <th>City</th>
      <th>Street</th>
      <th>Birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= agent.id %></td>
        <td><%= agent.name %></td>
        <td><%= agent.email %></td>
        <td><%= image_tag(agent.image_url, :width => 80) if agent.image.present? %></td>
        <td><%= agent.country %></td>
        <td><%= agent.city %></td>
        <td><%= agent.street %></td>
        <td><%= agent.birth %></td>
        <td><%= link_to 'Show', agent %></td>
    <!--  <td><%=link_to 'Edit', edit_agent_path(agent) %></td>-->
        <% unless (admin_email.email==agent.email )  %>
        <td><%= link_to 'Destroy', agent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

