
<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Picture:</strong>
<%= image_tag(@product.picture_url, :width => 600) if @product.picture.present? %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<%if user_signed_in?%>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%end%>
<%= link_to 'Back', products_path %>
