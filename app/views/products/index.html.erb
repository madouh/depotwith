<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
         <td><%= image_tag(product.picture_url, :width => 80) if product.picture.present? %></td>
        <td><%= truncate(strip_tags(product.title), length: 15) %></td>
        <td><%= truncate(strip_tags(product.description),length: 20) %></td>
       
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %><br>
          <%if user_signed_in? %>
        <%= link_to 'Edit', edit_product_path(product) %><br>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if user_signed_in?%>
<%= link_to 'New Product', new_product_path %>
<%end%>
